@model List<Order>
@{
    string status = "";
}
<div class="col-md-8 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <i class="fas fa-table"></i>
                Last Orders
            </h4>
            <div class="table-responsive">
                <table class="table">
                    <thead>
                        <tr>
                            <th>Customer</th>
                            <th>Item code</th>
                            <th>Quantity</th>
                            <th>Status</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            
                       
                        <tr>
                            <td class="font-weight-bold">
                                    @item.Customer.CustomerName @item.Customer.CustomerSurname
                            </td>
                            <td class="text-muted">
                                @item.Product.ProductName
                            </td>
                            <td>
                                @item.OrderCount
                            </td>
                                @if (item.Status == "In transit")
                                {
                                    <td>
                                        <label class="badge badge-warning badge-pill">@item.Status</label>
                                    </td>
                                }

                                @if (item.Status == "Delivered")
                                {
                                    <td>
                                        <label class="badge badge-success badge-pill">@item.Status</label>
                                    </td>
                                }

                                @if (item.Status == "Order received")
                                {
                                    <td>
                                        <label class="badge badge-info badge-pill">@item.Status</label>
                                    </td>
                                }

                                @if (item.Status == "Cancelled")
                                {
                                    <td>
                                        <label class="badge badge-danger badge-pill">@item.Status</label>
                                    </td>
                                }
                          
                        </tr>
                        }
                </table>
            </div>
        </div>
    </div>
</div>

<div class="col-md-4 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">
                <i class="fas fa-calendar-alt"></i>
                Calendar
            </h4>
            <div id="inline-datepicker-example" class="datepicker"></div>
        </div>
    </div>
</div>
