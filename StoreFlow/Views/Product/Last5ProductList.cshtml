@model List<Product>
@{
    ViewData["Title"] = "Last5ProductList";
    Layout = "~/Views/Layout/Index.cshtml";
}

<div class="row">
    <div class="col-lg-12 grid-margin stretch-card">
        <div class="card">
            <div class="card-body">
                <h4 class="card-title">Last 5 Products</h4>
                <a href="/Product/AddProduct/">
                    <p class="card-description">
                        Add product <code>.tbl_products</code>
                    </p>
                </a>
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th>#</th>
                                <th>Product Name</th>
                                <th>Category</th>
                                <th>Price</th>
                                <th>Stock</th>
                                <th>Delete</th>
                                <th>Edit</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {

                                <tr>
                                    <th>@item.ProductId</th>
                                    <td>@item.ProductName</td>
                                    <td>@item.Category.CategoryName</td>
                                    <td>USD @item.ProductPrice</td>
                                    <td>@item.ProductStock</td>

                                    <td><a href="/Product/DeleteProduct/@item.ProductId" class="btn btn-outline-danger">Delete</a></td>
                                    <td><a href="/Product/EditProduct/@item.ProductId" class="btn btn-outline-info">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>


